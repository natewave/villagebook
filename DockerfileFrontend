FROM openjdk:11-slim-buster as frontend
RUN apt-get -y update
ENV APP_HOME /code
RUN mkdir $APP_HOME
WORKDIR $APP_HOME
COPY . $APP_NAME
RUN apt-get update
RUN apt-get -y install curl gnupg
RUN curl -sL https://deb.nodesource.com/setup_12.x  | bash -
RUN apt-get -y install nodejs
RUN npm install
CMD ["./run-frontend.sh"]
